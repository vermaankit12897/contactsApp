{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h2 class="text-center mt-4">Edit Profile</h2>
    <div class="card p-4 shadow-lg">
        {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
            <div class="mb-3">
                {{ form_label(form.fullName) }}
                {{ form_widget(form.fullName, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="mb-3">
                {{ form_label(form.dob) }}
                {{ form_widget(form.dob, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
            </div>
            <div class="mb-3">
                <label>Current Profile Picture:</label>
                <div class="mb-2">
                    {% if app.user.profilePicture %}
                        <img src="{{ asset('uploads/profile_pictures/' ~ app.user.profilePicture) }}" class="rounded-circle border" width="100">
                    {% else %}
                        <p class="text-muted">No profile picture uploaded.</p>
                    {% endif %}
                </div>
                {{ form_label(form.profilePicture) }}
                {{ form_widget(form.profilePicture, {'attr': {'class': 'form-control'}}) }}
            </div>
            <button type="submit" class="btn btn-success w-100">Save Changes</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
