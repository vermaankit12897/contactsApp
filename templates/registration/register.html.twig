{% extends 'base.html.twig' %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card p-4 shadow-lg" style="max-width: 400px; width: 100%;">
        <h3 class="text-center">Join Social Network</h3>

        <div class="text-center">
            <img src="{{ asset('images/default-profile.png') }}" class="rounded-circle border mb-2" width="100">
        </div>

        {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="mb-3">
                {{ form_widget(form.fullName, {'attr': {'class': 'form-control', 'placeholder': 'Full Name'}}) }}
            </div>
            <div class="mb-3">
                {{ form_widget(form.dob, {'attr': {'class': 'form-control', 'type': 'date'}}) }}
            </div>
            <div class="mb-3">
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email Address'}}) }}
            </div>
            <div class="mb-3 d-flex gap-2">
                {{ form_widget(form.plainPassword.first) }}  
                {{ form_widget(form.plainPassword.second) }}  
            </div>
            <div class="mb-3">
                {{ form_widget(form.profilePicture, {'attr': {'class': 'form-control'}}) }} {# âœ… This is enough for profile picture upload #}
            </div>
            <p class="small text-muted">Use A-Z, a-z, 0-9, !@#$%^&* in password</p>
            <button type="submit" class="btn btn-primary w-100">Sign Up</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
